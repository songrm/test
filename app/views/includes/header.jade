nav.navbar.navbar-default
	.container
		.navbar-header 测试登录
		if user
			.navbar-right
				span 欢迎登录#{user.name}，
				a(href='/logout',role="button") 退出
		else
			.navbar-right
				a(href='/signup_y') 注册|
				a(href='/signon_y') 登录|
				button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#signup") 注册
				button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#signon") 登录

h1 #{title}

#signup.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
	div.modal-dialog(role="document")
		div.modal-content
			div.modal-header
				button(type="button" class="close" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true")
				h4#myModalLabel.myModalLabel 注册
			form(method='post',action='/signup')
				div.modal-body
						.form-group
							label(for="exampleInputEmail1") 用户名
							input(type="text" class="form-control" name="user[name]" id="exampleInputEmail1" placeholder="id")
						.form-group
							label(for="exampleInputEmail1") 密码
							input(type="text" class="form-control" name="user[password]" id="exampleInputEmail1")
				div.modal-footer
					button(type="button" class="btn btn-default" data-dismiss="modal") close
					button(type="submit" class="btn btn-primary") 注册
#signon.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
	div.modal-dialog(role="document")
		div.modal-content
			div.modal-header
				button(type="button" class="close" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true")
				h4#myModalLabel.myModalLabel 登录
			form(method='post',action='/signon')
				div.modal-body
						.form-group
							label(for="exampleInputEmail1") 用户名
							input(type="text" class="form-control" name="user[name]" id="exampleInputEmail1" placeholder="id")
						.form-group
							label(for="exampleInputEmail1") 密码
							input(type="text" class="form-control" name="user[password]" id="exampleInputEmail1")
				div.modal-footer
					button(type="button" class="btn btn-default" data-dismiss="modal") close
					button(type="submit" class="btn btn-primary") 登录